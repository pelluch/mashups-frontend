<!DOCTYPE html>
<html>
	<head>
		<title>MashupsFrontend</title>
		<%= stylesheet_link_tag    'application', media: 'all' %>
		<%= javascript_include_tag 'application' %>
		<%= csrf_meta_tags %>
	</head>
	<body>

	<%= render 'layouts/header' %>
	<div class="wrapper">
		<div class="container">
			<%= yield %>
		</div>

<div class="container">
	<!-- flash and warning display   -->
	<% flash.each do |name, msg| %>
	<%= content_tag :div, msg, :id => "flash_#{name}" %>
	<% end %>
	
	<%= yield %>
</div>

		<%= render 'layouts/footer' %>


	</div>

	</body>
</html>
