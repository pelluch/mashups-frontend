<header class="navbar navbar-fixed-top navbar-inverse" role = "navigation" >
  <div class="container-fluid">
    <%= link_to "Masher!", root_path, class: "navbar-brand" %>
      <ul class="nav navbar-nav nav-pillss">
        
        <li><%= link_to "Home",    root_path %></li>
        <% if current_user %>
          <li><%= link_to current_user.name , user_path(current_user.id) %></li>
          <li><%= link_to "Log out", log_out_path %></li>
        <% else %>
          <li><%= link_to "Sign up", sign_up_path %></li>
          <li><%= link_to "Log in", log_in_path %></li>
        <% end %> 
        <li><%= link_to "Settings",    configuration_path %></li>       
            

      </ul>
      <form class="navbar-form navbar-right" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Search</button>
      </form>
    </div>
</header>